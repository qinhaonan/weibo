<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popover_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/allcomment"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/home_groupitem_bg_auto"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="所有评论"
            android:textColor="@color/home_groupitem_textview_background_auto"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/friendscomment"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/home_groupitem_bg_auto"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="关注的人"
            android:textColor="@color/home_groupitem_textview_background_auto"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commenttosend"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/home_groupitem_bg_auto"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="我发出的"
            android:textColor="@color/home_groupitem_textview_background_auto"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>