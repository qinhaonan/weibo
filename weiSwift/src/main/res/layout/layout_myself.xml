<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/userinfo_bg">
<ImageView
    android:id="@+id/img_avatar"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:src="@drawable/default_zj"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="昵称"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="45dp"
            android:textSize="17sp"
            android:text="农人币  140"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="邀请码EE157"/>

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:drawableLeft="@drawable/attention_person"
            android:background="@color/white"
            android:paddingRight="35dp"
            android:text="我的关注"/>
        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:background="@color/white"
            android:paddingRight="35dp"
            android:drawableLeft="@drawable/my_collect"
            android:gravity="center"
            android:textSize="14sp"
            android:text="我的收藏"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/greyDark" />

    <TextView
        android:id="@+id/tv_answers"
        style="@style/TextViewFind"
        android:drawableLeft="@drawable/my_answer"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="我的问答" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="8dp"
        android:background="@color/greyDark" />
    <TextView
        android:id="@+id/tv_order"
        style="@style/TextViewFind"
        android:drawableLeft="@drawable/my_orderform"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="我的订单" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/greyDark" />

    <TextView
        android:id="@+id/tv_invite_code"
        style="@style/TextViewFind"
        android:drawableLeft="@drawable/invite_code"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="填写邀请码" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="8dp"
        android:background="@color/greyDark" />
    <TextView
        android:id="@+id/tv_help"
        style="@style/TextViewFind"
        android:textSize="14sp"
        android:drawableLeft="@drawable/help_person"
        android:layout_marginLeft="5dp"
        android:text="客服与帮助" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="8dp"
        android:background="@color/greyDark" />
    <TextView
        android:id="@+id/tv_settings"
        style="@style/TextViewFind"
        android:drawableLeft="@drawable/setting"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:text="设置" />

</LinearLayout>